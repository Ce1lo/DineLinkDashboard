<!-- Auth Layout - Blurred Background Design -->
<div class="min-h-screen relative">
    <!-- Background Image with Blur -->
    <div class="absolute inset-0 z-0">
        <img src="https://images.unsplash.com/photo-1517248135467-4c7edcad34c4?w=1920&q=80" 
             alt="Restaurant Background" 
             class="w-full h-full object-cover">
        <div class="absolute inset-0 bg-black/50 backdrop-blur-sm"></div>
    </div>
    
    <!-- Content Container -->
    <div class="relative z-10 min-h-screen flex items-center justify-center p-4 lg:p-8">
        <div class="w-full max-w-5xl grid grid-cols-1 lg:grid-cols-2 gap-0 bg-white/95 backdrop-blur-md rounded-3xl shadow-2xl overflow-hidden">
            
            <!-- Left Side - Info Panel -->
            <div class="hidden lg:flex flex-col justify-center p-10 bg-gradient-to-br from-primary-600 via-primary-700 to-accent-800 text-white relative overflow-hidden">
                <!-- Decorative elements -->
                <div class="absolute -bottom-16 -left-16 w-64 h-64 bg-white/10 rounded-full"></div>
                <div class="absolute -top-12 -right-12 w-48 h-48 bg-white/10 rounded-full"></div>
                
                <div class="relative z-10">
                    <!-- Logo -->
                    <div class="flex items-center gap-3 mb-8">
                        <div class="w-14 h-14 bg-white/20 rounded-2xl flex items-center justify-center">
                            <i class="fa-solid fa-utensils text-2xl"></i>
                        </div>
                        <div>
                            <h1 class="text-2xl font-bold">Restaurant</h1>
                            <p class="text-white/70 text-sm">Dashboard</p>
                        </div>
                    </div>
                    
                    <!-- Tagline -->
                    <h2 class="text-3xl font-bold mb-4">Quản lý nhà hàng thông minh</h2>
                    <p class="text-white/80 mb-8">Hệ thống đặt bàn hiện đại, giúp bạn tối ưu vận hành và nâng cao trải nghiệm khách hàng.</p>
                    
                    <!-- Features -->
                    <div class="space-y-4">
                        <div class="flex items-center gap-3">
                            <i class="fa-solid fa-circle-check text-green-300"></i>
                            <span>Quản lý đặt bàn realtime</span>
                        </div>
                        <div class="flex items-center gap-3">
                            <i class="fa-solid fa-circle-check text-green-300"></i>
                            <span>Thống kê doanh thu chi tiết</span>
                        </div>
                        <div class="flex items-center gap-3">
                            <i class="fa-solid fa-circle-check text-green-300"></i>
                            <span>Tích hợp Zalo Mini App</span>
                        </div>
                        <div class="flex items-center gap-3">
                            <i class="fa-solid fa-circle-check text-green-300"></i>
                            <span>Đánh giá & phản hồi khách hàng</span>
                        </div>
                    </div>
                </div>
            </div>
            
            <!-- Right Side - Form -->
            <div class="flex flex-col justify-center p-8 lg:p-10">
                <!-- Mobile Logo -->
                <div class="lg:hidden text-center mb-6">
                    <div class="w-14 h-14 bg-primary-500 rounded-2xl flex items-center justify-center mx-auto mb-3">
                        <i class="fa-solid fa-utensils text-white text-xl"></i>
                    </div>
                    <h1 class="text-xl font-bold text-stone-900">Restaurant Dashboard</h1>
                </div>
                
                <!-- Form Content -->
                {{{content}}}
                
                <!-- Footer -->
                <p class="text-center text-xs text-stone-400 mt-6">
                    © 2025 Restaurant Dashboard
                </p>
            </div>
        </div>
    </div>
</div>
